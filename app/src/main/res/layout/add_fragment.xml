<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
  
  <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchase_title"
        android:layout_alignEnd="@+id/purchase_title"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="73dp"
        android:id="@+id/categorySpinner" />
  
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="30dp">

        <TextView
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/amount"
            android:layout_marginBottom="13dp"
            android:id="@+id/dollar_sign"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_toStartOf="@+id/amount"
            android:layout_marginRight="15dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/purchase_title"
            android:text="Title"
            android:gravity="bottom"
            android:layout_alignBaseline="@+id/purchase"
            android:layout_alignBottom="@+id/purchase"
            android:layout_toEndOf="@+id/purchase"
            android:layout_marginStart="28dp"
            android:textIsSelectable="false"
            android:selectAllOnFocus="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_camera"
            android:layout_below="@+id/amount"
            android:layout_alignEnd="@+id/amount"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="18dp"
            android:id="@+id/imageButton" />

        <TextView
            android:text="Purchase Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchase"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_width="160dp"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignStart="@+id/dollar_sign"
            android:layout_marginStart="14dp" />

        <EditText
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amount"
            android:layout_below="@+id/purchase_title"
            android:layout_alignParentEnd="true"
            android:includeFontPadding="true"
            android:textIsSelectable="true"
            android:selectAllOnFocus="true" />

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</ScrollView>